<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> of <%= dose.ingredient.name %><p>
<p><%= link_to "Delete", cocktail_dose_path(@cocktail,dose), method: :delete%></p>
<% end%>
<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail)%></p>

<p><%= link_to "Back to list", cocktails_path%></p>
